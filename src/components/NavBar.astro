---
import Hr from "@components/Hr.astro";
const links = [
  {
    name: "Posts",
    link: "/posts",
  },
  {
    name: "Projects",
    link: "/projects",
  },
  {
    name: "About",
    link: "/about",
  },
  {
    name: "Gists",
    link: "/gists",
  },
];

import Sanku from "./Sanku.astro";
---

<div>
  <nav
    class="flex justify-between md:flex-row flex-col md:items-center md:mb-5"
  >
    <Sanku />
    <ul class="flex space-x-8 p-4 items-center">
      {
        links.map((field) => (
          <li>
            <a
              href={field.link}
              class="text-base underline-hover font-medium pb-1"
            >
              {field.name}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
  <Hr />
</div>
