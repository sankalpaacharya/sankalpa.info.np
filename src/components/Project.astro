---
import { Image } from "astro:assets";

const { title, description, image, link } = Astro.props;
---

<a href={link} target="_blank">
  <div class="bg-[#262626] p-6 rounded-lg space-y-3">
    <Image src={image} alt="" style={{ borderRadius: "10px" }} />
    <div>
      <h2 class="text-xl font-medium text-primary">{title}</h2>
      <p class="text-gray-300">{description}</p>
    </div>
  </div>
</a>
